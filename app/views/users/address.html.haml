%body
  .user-signup3

    .signup-container

      %header.signup-header

        %h1

          %a(href="#")
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3160895340', alt: 'mercari', height: '', width: '', class: 'signup-header-img'

        %nav.progress-ber

          %ol.clearfix
            %li
              会員情報
              .progress-status.back-active
                .after.back-active
            %li
              電話番号認証
              .progress-status.back-active
                .before.back-active
                .after.back-active
            %li.active
              お届け先住所入力
              .progress-status.back-active
                .before.back-active
                .after
            %li
              支払い方法
              .progress-status
                .before
                .after
            %li
              完了
              .progress-status
                .before


      %main.signup-main

        %section.signup__container

          %h2.signup-head 住所入力

          .signup-inner

            = form_for [@user] do |f|
              .signup-content

                .form-group#first
                  = f.label :郵便番号
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）123-4567"

                .form-group
                  = f.label :都道府県
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "PC・携帯どちらでも可"

                .form-group
                  = f.label :市区町村
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）横浜市緑区"

                .form-group
                  = f.label :番地
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）青山1-1-1"

                .form-group
                  = f.label :建物名
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）柳ビル103"

                .form-group
                  = f.label :電話
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）柳ビル103"

                = f.submit "次へ進む", class: 'btn-red btn-befault'

                = link_to "次へ進む(仮)" ,users_registration_payment_path(@user), class: "btn-red btn-befault"

                %p.info-text
                  ※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。

                .form-group
                  %p.text-right.rink-bule
                    %a.link-blue(href="#" terget="_blank")
                      電話番号の確認が必要な理由
                      %i.fas.fa-angle-right

      = render partial: 'footer'
