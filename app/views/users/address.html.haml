%body
  .user-signup3

    .signup-container

      %header.signup-header

        %h1

          %a(href="#")
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3160895340', alt: 'mercari', height: '', width: '', class: 'signup-header-img'

        %nav.progress-ber

          %ol.clearfix
            %li
              会員情報
              .progress-status.back-active
                .after.back-active
            %li
              電話番号認証
              .progress-status.back-active
                .before.back-active
                .after.back-active
            %li.active
              お届け先住所入力
              .progress-status.back-active
                .before.back-active
                .after
            %li
              支払い方法
              .progress-status
                .before
                .after
            %li
              完了
              .progress-status
                .before


      %main.signup-main

        %section.signup__container

          %h2.signup-head 住所入力

          .signup-inner

            = form_for [@user] do |f|
              .signup-content

                .form-group#first
                  = f.label :郵便番号
                  %span.form-require 必須
                  = f.email_field :email, autofocus: true,autocomplete: "email", class: 'field-input', placeholder: "例）123-4567"

                .form-group
                  = f.label :都道府県
                  %span.form-require 必須
                  %br/

                  .birthday-select-wrap

                    .select-wrap#pref_name
                      %select.select-default
                        %option{:value => "北海道"} 北海道
                        %option{:value => "青森県"} 青森県
                        %option{:value => "岩手県"} 岩手県
                        %option{:value => "宮城県"} 宮城県
