.toppage
  = render 'layouts/header'
  .main
    .main__list
      %h2.main__list__title ピックアップカテゴリー
      .main__list__item
        %h3.main__list__sub-title レディース 新着アイテム
        = render partial: 'product-list', locals: {categories: @ladies}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title メンズ 新着アイテム
        = render partial: 'product-list', locals: {categories: @mens}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title ベビー・キッズ 新着アイテム
        = render partial: 'product-list', locals: {categories: @kids}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title コスメ・香水・美容 新着アイテム
        = render partial: 'product-list', locals: {categories: @cosmetics}
        .view__all
          %a すべての商品を見る
    .main__list
      %h2.main__list__title ピックアップブランド
      .main__list__item
        %h3.main__list__sub-title シャネル 新着アイテム
        = render partial: 'product-list', locals: {categories: @chanels}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title ルイ ヴィトン 新着アイテム
        = render partial: 'product-list', locals: {categories: @vuittons}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title シュプリーム 新着アイテム
        = render partial: 'product-list', locals: {categories: @supremes}
        .view__all
          %a すべての商品を見る
      .main__list__item
        %h3.main__list__sub-title ナイキ 新着アイテム
        = render partial: 'product-list', locals: {categories: @nikes}
        .view__all
          %a すべての商品を見る
    .flame
      #gallery
        .easy-photo
          .easy__main__content
            .easy__main__area
              .area__content
                %h2.area__text スマホでかんたん
                %h2.area__text フリマアプリ
                %p.area__detail メルカリはスマホカメラからすぐに出品できる
                %p.area__detail 購入時も安心な独自システムのアプリです
                .vitual-store
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?3856598694", class: "store-img"
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?3856598694", class: "store-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/jp/top/main_content_pc.png?3856598694", class: "iphone-img"
        = image_tag "https://www.mercari.com/jp/assets/img/common/jp/top/banner-camp.jpg", class: "camp-photo"
        = image_tag "https://www.mercari.com/jp/assets/img/common/jp/top/banner-6th-thanks.jpg", class: "natukasi-photo"
      .nav
        #prev
        #next
      #dots
        .left-dot.dot
        .center-dot.dot
        .right-dot.dot
  = render 'layouts/aside'
  = render 'layouts/footer'
  =link_to "products/new" do
    .sell-btn
      .sell-btn__text 出品
      %i.fas.fa-camera
