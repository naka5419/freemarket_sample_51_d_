.wrapper-products
  = render 'layouts/header'
  .show-products
    .product-contents
      %h1 
        = @product.name
      .product-contents__main-content 
        .product-contents__main-content--photos-flame
          .gallery
            = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_1.jpg?1541732119", class: "photo")
            = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_2.jpg?1541732119", class: "photo")
            = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_3.jpg?1541732119", class: "photo")
            = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_4.jpg?1541732119", class: "photo")
          .owl-dots
            - if @product.images.attached?
              = @product.images.each_with_index do |image, i|
                .owl-dot
                  %span
                  .owl-dot-inner
                    = image_tag image, class:"photo-#{i}"
            -#     = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_1.jpg?1541732119", class: "photo-1")
            -# .owl-dot
            -#   %span
            -#   .owl-dot-inner
            -#     = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_2.jpg?1541732119", class: "photo-2")
            -# .owl-dot
            -#   %span
            -#   .owl-dot-inner
            -#     = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_3.jpg?1541732119", class: "photo-3")
            -# .owl-dot
            -#   %span
            -#   .owl-dot-inner
            -#     = image_tag("https://static.mercdn.net/item/detail/orig/photos/m60487975709_4.jpg?1541732119", class: "photo-4")
        %table.product-contents__main-content--table{:cellspacing => "0"}
          %tr
            %th.border-top 出品者
            %td.border-top 
              = @product.seller.nickname
          %tr
            %th カテゴリー
            %td
              - @product.product_categories.each do |product_category|
                = product_category.category.category
          %tr
            %th ブランド
            %td
              = @product.bland.name unless @product.bland.nil?
          %tr
            %th 商品の状態
            %td
              = @product.condition
          %tr
            %th 商品のサイズ
            %td
              = @size.size unless @size.nil?
          %tr
            %th 配送料の負担
            %td 
              = @product.shipping_cost
          %tr
            %th 配送の方法
            %td
              = @product.shipping_method
          %tr
            %th 配送元地域
            %td
              = @product.source_area
          %tr
            %th 発送日の目安
            %td
              = @product.shipping_days
      .product-contents__price-box
        .product-contents__price-box--number
          .product-price
            ¥
            = @product.price 
          .product-tax
            (税込)
          .product-shipping-fee
            送料込み
      .product-contents__buy-button
        購入画面に進む
      .product-contents__sold-button
        売り切れました
      .product-contents__description
        .product-contents__description--inner
          = @product.description
      .product-contents__left-button
        %button.product-contents__left-button--like
          %i.far.fa-heart いいね! ０
        %button.product-contents__left-button--report
          %i.far.fa-flag  不適切な商品の報告
      .product-contents__right-button
        = link_to "#" do
          %i.fas.fa-lock
          %span あんしん・あんぜんへの取り組み
    .product-messages
      %figure.user-image
        = image_tag("//static.mercdn.net/images/member_photo_noimage_thumb.png", class: "profile-image", width:"45px", height: "45px")
      .user-name 
        ユーザーネーム
      .message-body
        .message-text
          こんばんは。
      .message-triangule
      %form.message-form
        #p.alert 相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %p
        %textarea.comment{:cols => "100", :name => "comment", :rows => "10"}
        %button.message-submit
          %span 売り切れのためコメントできません
        %button.message-submit
          %span コメントする
