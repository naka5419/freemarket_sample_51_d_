.new-card-main
  .new-card-main__content
    .content__area
      %h2.content__area__head 支払い方法
      = form_with(url: pay_cards_path, local: true, method: :post, id: 'charge-form', class: 'content__area__info') do |f|
        .form
          .form__group
            = f.label :カード番号
            %span.form__require 必須
            = f.text_field :number,  class: "input__default", placeholder: "半角数字のみ" , maxlength: "16", type: "text", id: "card__number"
            %ul.sign-up__card__list
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2399382397', width: '49', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2399382397', width: '34', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2399382397', width: '30', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2399382397', width: '32', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2399382397', width: '21', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2399382397', width: '32', height: '20'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2399382397', width: '32', height: '20'
          .form__group.signup__from-expire
            = f.label :有効期限
            %span.form__require 必須
            .select__wrapdd
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %i.fas.fa-chevron-down
              %span.form__month 月
            .select__wrapdd
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %i.fas.fa-chevron-down
              %span.form__month 年
          .form__group
            = f.label :セキュリティコード
            %span.form__require 必須
            = f.text_field :cvc, type: "text", placeholder: "カード背面４桁もしくは３桁の番号", class: "cvc", maxlength: "4", id: "cvc"
            .signup__seqcode
              .signup__seqcode__text
                %span.form__question ?
                カード裏面の番号とは？
          = f.submit "次へ進む", id: "token_submit", class: "btn__default btn--red none"
          = link_to "次へ進む(仮)" ,new_close_path, class: "btn__default btn--red"
