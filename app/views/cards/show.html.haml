.card_registration
  - breadcrumb :show_card
  = render 'layouts/header'
  .main
    .main__content
      .content__area
        %h2.content__area__head 支払い方法
        .content__area__inner
          .inner__area
            .inner__area__head
              %h3.inner__head__text クレジットカード一覧
          .payment__list
            %ul.payment__list__area
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2399382397', width: '49', height: '20'
              .credit__num
                = "**** **** **** " + @default_card_information.last4
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              .credit__year__month
                = exp_month + " / " + exp_year
              = form_with(url: delete_cards_path, local: true, method: :post, id: 'charge-form',  name: "inputForm") do |f|
                = f.text_field :card_id, type: "hidden"
                = f.submit "削除する", class: "payment__remove"
          .how-regist
            %a.how-regist__area
              %span.how-regist__area__text 支払い方法について
              %i.fas.fa-chevron-right
  = render 'layouts/aside'
  = render 'layouts/footer'
